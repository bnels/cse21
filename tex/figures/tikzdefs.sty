\newcommand{\patchA}[2]{ % draw an image patch
  % #1 = radius
  % #2 = angle
  \def\radius{#1}
  \def\angle{#2}
  \draw [solid,thick](0,0) circle (\radius);
  \filldraw [fill=white](0,0) circle (\radius);
  \filldraw[fill=black,draw=black] (0:0mm) -- ({\angle}:\radius )
      arc (\angle:{\angle+180}:\radius ) -- cycle;
  }

\newcommand{\patchB}[2]{ % draw an image patch
  % #1 = radius
  % #2 = angle
  \def\radius{#1}
  \def\angle{#2}
  \def\a{{\angle + atan(1/3)}}
  \def\b{{\angle + 180 - atan(1/3)}}
  \def\c{{\angle + 180 + atan(1/3)}}
  \def\d{{\angle + 360 - atan(1/3)}}
  \filldraw [fill=white](0,0) circle (\radius);
  \draw [solid,thick](0,0) circle (\radius);
  \filldraw[fill=black,draw=black] (\a:\radius) arc (\a:\b:\radius) -- cycle;
  \filldraw[fill=black,draw=black] (\c:\radius) arc (\c:\d:\radius) -- cycle;
  }

