\newcommand{\lineB}[2]{
	% #1 = width
	% #2 = height
	\def\wid{#1}
	\def\hig{#2}
	\def\ya{{\hig / 2}}
	\def\yb{{-\hig / 2}}
	\def\xa{{0}}
	\def\xb{{\wid / 3}}
	\def\xc{{2 * \wid / 3}}
	\def\xd{{\wid}}
	\draw [solid, ultra thick] (\xa,\ya) -- (\xb,\ya) -- (\xb,\yb) -- (\xc,\yb) -- (\xc,\ya) -- (\xd,\ya);
}

