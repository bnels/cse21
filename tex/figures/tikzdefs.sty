\newcommand{\transformB}[1]{
	\def\scal{#1}
	\lineB{1.0*\scal}{0.5*\scal}
	\draw [->, black, ultra thick] (1.2*\scal,0) -- (1.8*\scal,0);
	\begin{scope}[shift={({2.5*\scal},0)}]
		\patchB{0.5*\scal}{0}
	\end{scope}
}

\newcommand{\transformD}[1]{
